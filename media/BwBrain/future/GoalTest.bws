    goal IdleGoal(idle)
        creator Main(self bored true)
        
    operator (* -> $x) (idle -> $y) :meta
        $x conflict $y
        
    method Idle(idle)
        {Console.WriteLine("Idle");}
        
    goal SatisfyHungerGoal(satisfy-hunger)
        creator Main(self hunger $h)
            precondition
                {h > 10}
                
    method SatisfyHunger(satisfy-hunger)
        #choose-food -> $f
        #eat $f
        eat apple1

    goal EatGoal(eat $f)
        creator Main(perceive $f)
            precondition
                $f type food
                self hunger $h
                {h > 10}
                        
    method Eat(eat $f)
        goto $f
        animate :name "Eating" :speed 1.0 :loop false
        
